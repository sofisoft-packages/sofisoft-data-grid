{
  "name": "sofisoft-data-grid",
  "version": "1.0.1",
  "description": "A powerful, feature-rich React data grid component built on top of Glide Data Grid. AG-Grid alternative with sorting, filtering, pagination, and more.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup && node -e \"const fs = require('fs'); const gdgCss = fs.readFileSync('node_modules/@glideapps/glide-data-grid/dist/index.css', 'utf8'); const customCss = fs.readFileSync('src/DataGrid.css', 'utf8'); fs.writeFileSync('dist/styles.css', gdgCss + '\\n\\n/* Sofisoft DataGrid Styles */\\n' + customCss);\"",
    "build:watch": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "react",
    "data-grid",
    "datagrid",
    "table",
    "spreadsheet",
    "glide-data-grid",
    "ag-grid",
    "ag-grid-alternative",
    "react-table",
    "editable-grid",
    "sortable",
    "filterable",
    "pagination",
    "excel",
    "virtualized",
    "enterprise",
    "typescript"
  ],
  "author": "Sofisoft <contact@sofisoft.ma>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sofisoft-packages/sofisoft-data-grid.git"
  },
  "bugs": {
    "url": "https://github.com/sofisoft-packages/sofisoft-data-grid/issues"
  },
  "homepage": "https://github.com/sofisoft-packages/sofisoft-data-grid#readme",
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@glideapps/glide-data-grid": "^6.0.0",
    "@glideapps/glide-data-grid-cells": "^6.0.0",
    "lodash": "^4.17.21",
    "marked": "^9.0.0",
    "react-responsive-carousel": "^3.2.23"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
